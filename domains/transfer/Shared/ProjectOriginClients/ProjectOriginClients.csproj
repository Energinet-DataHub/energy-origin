<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	  <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	  <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Google.Protobuf" Version="3.26.1" />
		<PackageReference Include="Grpc.AspNetCore" Version="2.62.0" />
		<PackageReference Include="Grpc.AspNetCore.Server.ClientFactory" Version="2.62.0" />
		<PackageReference Include="Grpc.Tools" Version="2.62.0" PrivateAssets="all" />
		<PackageReference Include="ProjectOrigin.HierarchicalDeterministicKeys" Version="1.0.0" />
		<PackageReference Include="ProjectOrigin.PedersenCommitment" Version="1.1.1" />
	</ItemGroup>

	<ItemGroup>
		<Protobuf Include="Protos/common.proto" GrpcServices="None" />
		<Protobuf Include="Protos/electricity.proto" ProtoRoot="Protos" GrpcServices="None" />
		<Protobuf Include="Protos/registry.proto" ProtoRoot="Protos" GrpcServices="Client" />
		<Protobuf Include="Protos/wallet.proto" GrpcServices="Client" />
	</ItemGroup>
</Project>
