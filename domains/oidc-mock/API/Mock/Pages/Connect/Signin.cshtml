@page
@model Oidc.Mock.Pages.Connect.SigninModel
@{
    ViewData["Title"] = "Sign in";
}

<main class="signin-container">
    <h2 class="action-text">Sign in as a specific persona</h2>
    <p class="action-subtext">Select one of the personas below to continue the sign-in process. Hover over a card for more details.</p>

    <form asp-antiforgery="false" method="post" id="user-selection-form">
        @foreach (var user in Model.Users)
        {
            @if (user.isSelectable)
            {
                <button name="name" value="@user.Name" type="submit" class="peopleButton">
                    <div class="image">
                        <img src="@user.ImageUrl" alt="Profile image for @user.Name" />
                    </div>
                    <div class="details">
                        <div class="details-name">@user.Name</div>
                        @if (user.IdToken.ContainsKey("org_name"))
                        {
                            <div class="details-org-name">@user.IdToken["org_name"]</div>
                        }
                        @if (user.IdToken.ContainsKey("org_cvr"))
                        {
                            <div class="details-org-cvr">CVR: @user.IdToken["org_cvr"]</div>
                        }
                        <p class="details-description">@user.Description</p>
                    </div>
                </button>
            }
        }
    </form>
</main>
