<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Google.Protobuf" Version="3.23.3" />
		<PackageReference Include="Grpc.AspNetCore" Version="2.54.0" />
		<PackageReference Include="Grpc.AspNetCore.Server.ClientFactory" Version="2.54.0" />
		<PackageReference Include="Grpc.Tools" Version="2.56.0" PrivateAssets="All" />
		<PackageReference Include="ProjectOrigin.HierarchicalDeterministicKeys" Version="0.2.0-rc.17" />
		<PackageReference Include="ProjectOrigin.PedersenCommitment" Version="0.2.0-rc.17" />
	</ItemGroup>

	<Target Name="Updating grpc references" BeforeTargets="PreBuildEvent">
		<Exec Command="dotnet tool restore" />
		<Exec Command="dotnet dotnet-grpc refresh -p $(ProjectDir)" />
	</Target>

	<ItemGroup>
		<Protobuf Include="Protos\common.proto" ProtoRoot="Protos" GrpcServices="None">
			<SourceUrl>https://raw.githubusercontent.com/project-origin/registry/v0.2.0-rc.17/src/Protos/common.proto</SourceUrl>
		</Protobuf>
		<Protobuf Include="Protos\wallet.proto" ProtoRoot="Protos" GrpcServices="Client">
			<SourceUrl>https://raw.githubusercontent.com/project-origin/wallet/v0.1.1/src/Protos/wallet.proto</SourceUrl>
		</Protobuf>
	</ItemGroup>
</Project>
